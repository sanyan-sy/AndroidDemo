<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_flow_view_et"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/activity_flow_view_search_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textSize="30dp"
            android:padding="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>


    <com.example.myapplication2.view.FlowView.FlowLayout
        android:id="@+id/activity_flow_view_fv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:max_lines="2"
        app:horizontal_spacing="10dp"
        android:layout_marginTop="20dp"/>

    <com.example.myapplication2.view.FlowView.MyFlowView
        android:id="@+id/activity_flow_view_my_fv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

</LinearLayout>