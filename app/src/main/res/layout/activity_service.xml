<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".service.ServiceActivity">

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="后台下载（非绑定式服务）"
      android:textAllCaps="false"
      android:onClick="jumpToUnBindService"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="后台下载（绑定式服务）"
      android:textAllCaps="false"
      android:onClick="jumpToBindService"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="多页面交互"
      android:textAllCaps="false"
      android:onClick="jumpToBroadcast"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="多页面交互2"
      android:textAllCaps="false"
      android:onClick="jumpToBroadcast2"/>

  </LinearLayout>