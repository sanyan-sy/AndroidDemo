<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ViewActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="圆角图片"
        android:textAllCaps="false"
        android:onClick="ToPictureView"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="空心圆"
        android:textAllCaps="false"
        android:onClick="jumpToRipple"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="长按事件"
        android:textAllCaps="false"
        android:onClick="jumpToLongPress"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进度条"
        android:textAllCaps="false"
        android:onClick="jumpToDownloadProgress"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Circular2"
        android:textAllCaps="false"
        android:onClick="jumpToCircular2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="可自动换行容器(云标签)"
        android:textAllCaps="false"
        android:onClick="jumpToCircular2"/>



</LinearLayout>